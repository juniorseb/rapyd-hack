<!Doctype html>
<html lang="fr">

<head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="fontawesome/css/all.css">
    <link rel="stylesheet" type="text/css" href="css/chat.css">
    <link rel="stylesheet" type="text/css" href="css/front.css">
    <link rel="stylesheet" type="text/css" href="css/typing.css">

    <title>Cateli</title>
</head>

<body>
    <!-- iframe -->

    <div class="chatbot">
        <div class="chatbot__support">

            <div class="chatbot__header">
                <div class="chatbot__image--header">
                    <img src="" alt="" srcset="">
                </div>
                <div class="chatbot__content--header">
                    <h3 class="chatbot__heading--header">Cateli</h3>
                    <p class="chatbot__description--header">Cateli, votre smart operator</p>
                </div>
            </div>

            <div class="chatbot__messages">
                <div class="support">
                        <% if (locals.cart.items.length > 1) { %>
                            <% for (const item of locals.cart.items) { %>
                                <div class="card card__item">
                                    <img src="<%= item.product.thumbnail %>" alt="" class="card-img-top">
                                    <div class="card-body">
                                        <div class="card-title h2"><%= item.product.title %></div>
                                        <a href="#" class="btn btn-warning" data-price="<%= item.product.price %>">($<%= item.product.price.toFixed(2) %>)</a>
                                    </div>
                                </div>
                            <% } %>
                            <a href="" class="btn btn-primary">Acheter <%= locals.cart.totalPrice %></a>
                        <% } else { %>
                            <% for (const item of locals.cart.items) { %>
                                <div class="card card__item">
                                    <img src="<%= item.product.thumbnail %>" alt="" class="card-img-top">
                                    <div class="card-body">
                                        <div class="card-title h2"><%= item.product.title %></div>
                                        <a href="#" class="btn btn-warning" data-price="<%= item.product.price %>">($<%= item.product.price.toFixed(2) %>)</a>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>

                </div>
            </div>

            <!-- Feedback -->
            <div class="row justify-content-center">
                <div class="col text-center my-4" style="display: none" id="feedback">
                    <div class="support">
                        <img src="" id="image" alt="" height="120" class="mt-2">
                        <h3 id="title" class="my-4"></h3>
                        <p id="message"></p>
                        <a role="button" class="btn btn-custom mt-2" href="" id="action"></a>
                    </div>
                </div>
            </div>

                <div style="max-width: 500px; max-height: 600px;" id="rapyd-checkout">
                    <img id="load" src="img/load.gif" alt="" style="display: none;">
                </div>

                <div class="chatbot__footer">
                    <input placeholder="send message" name="message" style="font-size: 1.5em;" />
                    <span style="font-size:2.5em; color:grey; padding: 0 10px;"><i
                            class="fas fa-paper-plane"></i></span>
                </div>

            </div>

            <div class="chatbot__button">
                <button><img src="img/chatbox-icon.svg" /></button>
            </div>


        </div>
        <script src="js/jquery/jquery.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>

        <script src="js/operator/chat.js"></script>
        <script src="js/operator/botsocket.js"></script>
        <script src="js/operator/language.js"></script>
        
        <script src="operator.js"></script>
        
        
        <!-- code to display the iframe -->
        <script src="https://sandboxcheckouttoolkit.rapyd.net"></script>
        <script src="js/rapyd.js"></script>
</body>

</html>